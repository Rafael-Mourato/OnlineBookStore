@model OnlineBookStore.ViewModels.IndexViewModel

@{
    ViewData["Title"] = "Página Inicial";
}

<div class="text-center">
    <h1 class="display-4 mb-5">BookAlegre</h1>
</div>

<div class="search-container mb-5">
    <div class="container d-flex justify-content-center">
        <form class="d-flex" id="searchBar" role="search" method="post" style="width: 500px;">
            <input class="form-control me-2 input-search" id="searchInput" name="search" type="search" placeholder="Qual livro procura?" aria-label="Search" style="width: 450px;">
            <button class="btn btn-outline-primary d-flex" type="submit">Procurar<i class="bi bi-search ms-2"></i></button>
        </form>
    </div>
</div>

@if (Model.Books != null)
{
    <div class="container">
        <div class="row row-cols-auto g-4">
            @foreach (var book in Model.Books)
            {
                <div class="col">
                    
                    <div class="card" style="width: 14rem; height: 100%;">
                        <img src=@book.Image class="card-img-top" alt="Capa-Livro" style="height: auto; object-fit: cover;">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@book.Title</h5>
                            <p class="card-text mb-1">@book.Author</p>
                            <p class="card-text">@book.Publisher</p>
                            <div class="mt-auto d-flex justify-content-between align-items-center">
                                <p class="mb-0">@book.Price €</p>
                                <a class="btn btn-outline-primary float-end" asp-action="BookDetails" asp-route-id=@book.Id><i class="bi bi-eye-fill"></i> Ver Livro</a>
                            </div>
                        </div>
                    </div>
                    
                </div>
            }
        </div>
    </div>
}
else
{
    <tr>
        <td colspan="7" class="text-center"><h5><i class="bi bi-exclamation-triangle-fill"></i> Não existem livros!!!</h5></td>
    </tr>

}

<!-- Botão para voltar ao topo -->
<button id="voltarAoTopo" class="btn p-0" style="position: fixed; bottom: 4rem; right: 1rem; display: none; width:2rem"><img src="lib\image\icon-scroll-up.png" style="width:2rem" alt="Alternate Text" /></button>