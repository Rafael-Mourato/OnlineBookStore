@model OnlineBookStore.ViewModels.IndexViewModel

@{
    ViewData["Title"] = "Página Inicial";
}

<div class="text-center">
    <h1 class="display-4 mb-5">Bem-vindo</h1>
</div>

@if (Model?.Books != null)
{
    <div class="container">
        <div class="row row-cols-1 row-cols-md-4 g-4">
            @foreach (var book in Model.Books)
            {
                <div class="col">
                    <div class="card" style="width: 14rem; height: 100%;">
                        <img src=@book.Image class="card-img-top" alt="Capa-Livro" style="height: auto; object-fit: cover;">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@book.Title</h5>
                            <p class="card-text mb-1">@book.Author</p>
                            <p class="card-text">@book.Publisher</p>
                            <div class="mt-auto d-flex justify-content-between align-items-center">
                                <p class="mb-0">@book.Price €</p>
                                <a class="btn btn-primary float-end" asp-action="BookDetails" asp-route-id=@book.Id>Ver Livro</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
else
{
    <tr>
        <td colspan="7" class="text-center"><h5><i class="bi bi-exclamation-triangle-fill"></i> Não existem livros!!!</h5></td>
    </tr>

}



