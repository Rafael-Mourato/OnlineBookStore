@model OnlineBookStore.ViewModels.IndexViewModel

@{
    ViewData["Title"] = "Página Inicial";
}

<div class="text-center">
    <h1 class="display-4 mb-5">Bem-vindo</h1>
</div>

@foreach (var book in Model.Books){
    <div class="container">
        <div class="row gap-3 g-4">
            <div class="card" style="width: 18rem;">
                <img src="https://img.wook.pt/images/abelha-maia/MXwxNjgwNzg1MnwxMjQyNTkzNHwxNDQ0MDM2NTk2MDAwfHdlYnA=/550x" class="card-img-top" alt="Capa-Livro">
