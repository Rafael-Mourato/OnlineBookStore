@model OnlineBookStore.ViewModels.IndexViewModel

@{
    ViewData["Title"] = "Gestão";
}

<div class="container mt-5">
    <h1 class="mb-4">Lista de Livros</h1>
    <table class="table table-striped text-center">
        <thead>
            <tr>
                <th>Capa</th>
                <th>Título</th>
                <th>ISBN</th>
                <th>Autor</th>
                <th>Preço</th>
                <th>Disponibilidade</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody class="align-middle">
            @if (Model?.Books != null)
            {
                @foreach (var book in Model.Books)
                {
                <tr>
                    <td><img src=@book.Image alt="Capa" style="max-height: 65px"/></td>
                    <td>@book.Title</td>
                    <td>@book.ISBN</td>
                    <td>@book.Author</td>
                    <td>@book.Price €</td>
                    <td>
                        @if (book.IsAvailable)
                        {
                            <p class="mb-0"><i class="bi bi-circle-fill" style="color: green;" ></i></p>
                        }
                        else
                        {
                            <p class="mb-0"><i class="bi bi-circle-fill" style="color: red;"></i></p>
                        }
                    </td>
                    <td>
                        <a class="btn btn-outline-dark" asp-action="Edit" asp-route-id="@book.Id">Editar</a> | <a class="btn btn-outline-dark" asp-action="Delete" asp-route-id="@book.Id">Eliminar</a>
                    </td>
                </tr>
                }
            }
            else{
                <tr>
                    <td colspan="7" class="text-center"><h5><i class="bi bi-exclamation-triangle-fill"></i> Não existem livros!!!</h5></td>
                </tr>
                
            }
            
        </tbody>
    </table>
</div>