@model OnlineBookStore.ViewModels.IndexViewModel

@{
    ViewData["Title"] = "Gestão da Livraria";
}

<div class="container">
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid justify-content-center">
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-center">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link text-dark active" asp-area="" asp-controller="Home" asp-action="BackOffice">Livros</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="BackOfficeOrdersPage">Encomendas</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</div>

<div class="container mt-5 d-flex flex-column justify-content-between">
    <a class="btn btn-outline-primary align-self-end mb-1" asp-action="Create"><i class="bi bi-plus-circle-fill"></i> Adicionar Livro</a>
    <table class="table table-striped text-center">
        <caption>Lista de livros</caption>
        <thead>
            <tr>
                <th>Capa</th>
                <th>Título</th>
                <th>ISBN</th>
                <th>Autor</th>
                <th>Preço</th>
                <th>Disponibilidade</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody class="align-middle">
            @if (Model?.Books != null && Model.Books.Any())
            {
                @foreach (var book in Model.Books)
                {
                <tr>
                    <td class="align-middle"><img src=@book.Image alt="Capa do Livro" style="height: 65px"/></td>
                    <td class="align-middle">@book.Title</td>
                    <td class="align-middle">@book.ISBN</td>
                    <td>@book.Author</td>
                    <td>@book.Price €</td>
                        <td class="align-middle">
                            @if (book.IsAvailable)
                            {
                                <p class="mb-0"><i class="bi bi-circle-fill" style="color: green;"></i></p>
                            }
                            else
                            {
                                <p class="mb-0"><i class="bi bi-circle-fill" style="color: red"></i></p>
                            }
                        </td>
                    <td>
                        <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id=@book.Id>Editar</a> | <a class="btn btn-outline-primary" asp-action="Delete" asp-route-id=@book.Id>Eliminar</a>
                        </td>
                </tr>
                }
            }
            else{
                <tr>
                    <td colspan="7" class="text-center"><h5><i class="bi bi-exclamation-triangle-fill"></i> Não existem livros!!!</h5></td>
                </tr>
                
            }
            
        </tbody>
    </table>
</div>