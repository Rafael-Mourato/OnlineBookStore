@model OnlineBookStore.ViewModels.IndexViewModel

<div class="container">
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid justify-content-center">
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-center">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link text-dark active" asp-area="" asp-controller="Home" asp-action="Index">Livros</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="OrdersPage">Encomendas</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</div>

<div class="container mt-5 d-flex flex-column justify-content-between">
    <table class="table table-striped text-center">
        <caption>Lista de encomendas</caption>
        <thead>
            <tr>
                <th>Capa</th>
                <th>Título</th>
                <th>Nome do utilizador</th>
                <th>Morada</th>
                <th>Estado da encomenda</th>
            </tr>
        </thead>
        <tbody class="align-middle">
            if (Model?.Orders != null)
            { 
                 @foreach (var order in Model.Orders) 
                 { 
                     <tr> 
                         <td class="align-middle"><img src=@order.book.Image alt="Capa do Livro" style="height: 65px" /></td> 
                         <td class="align-middle">@order.book.Title</td> 
                         <td class="align-middle">@order.Username</td> 
                         <td>@order.Address</td> 
                         <td>@order.Status</td> 
                     </tr> 
                 } 
            }
            else
            {
                <tr>
                    <td colspan="7" class="text-center"><h5><i class="bi bi-exclamation-triangle-fill"></i> Não existem livros!!!</h5></td>
                </tr>

            }

        </tbody>
    </table>
</div>